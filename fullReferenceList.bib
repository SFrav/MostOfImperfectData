keywords = {Boundary line analysis,Cassava,Cereal yields,Grain legumes,Highland banana,Non-responsive soils,Soil degradation,Soil organic matter},
pages = {76--90},
publisher = {Elsevier B.V.},
title = {{When yield gaps are poverty traps: The paradigm of ecological intensification in African smallholder agriculture}},
