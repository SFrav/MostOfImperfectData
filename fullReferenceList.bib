journal = {Annals of Epidemiology},
keywords = {Doubly Labeled Water,Energy Expenditure,Energy Intake,Mental Recall,Nutrition Assessment,Underreporting},
pmid = {19576535},
title = {{Number of 24-Hour Diet Recalls Needed to Estimate Energy Intake}},
