isbn = {1573-5214},
issn = {15735214},
journal = {NJAS - Wageningen Journal of Life Sciences},
keywords = {agronomic practices,anaemia,bioavailability,diet,nutritional quality,phytic acid,processing},
number = {3-4},
pages = {253--279},
title = {{Fighting Fe deficiency malnutrition in West Africa: an interdisciplinary programme on a food chain approach}},
