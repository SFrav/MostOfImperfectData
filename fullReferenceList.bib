institution = {World Bank},
issn = {18735991},
number = {June},
title = {{Missing (Ness) in Action: Selectivity Bias in Gps-Based Land Area Measurements}},
url = {http://papers.ssrn.com/sol3/papers.cfm?abstract{\_}id=2281015},
year = {2013}
